{
  "code": "cryptowallet",
  "project": "CryptoWallet",
  "description": "CryptoWallet",
  "copyright": "CryptoWallet",
  "keywords": "crypto, bitcoin, ethereum, cryptocurrency",
  "author": "gcachuo@gmail.com",
  "theme": "themes/flatkit/html/",
  "entry": "index.html",
  "default": "cartera",
  "breadcrumbs": true,
  "error": {
    "button": "Return to Main Page",
    "file": "error.html",
    "messages": {
      "500": "An error ocurred"
    }
  },
  "modules": {
    "login": {
      "name": "Login",
      "icon": "",
      "href": "login",
      "file": "signin.html",
      "onlogin": false
    },
    "signup": {
      "name": "Signup",
      "icon": "",
      "href": "signup",
      "file": "signup.html",
      "onlogin": false
    },
    "cartera": {
      "name": "Cartera",
      "icon": "account_balance_wallet",
      "href": "cartera",
      "action": {
        "name": "New Transaction",
        "href": "new"
      }
    },
    "clientes": {
      "name": "Clientes",
      "icon": "people",
      "href": "clientes",
      "hidden": true
    },
    "logout": {
      "name": "Cerrar Sesión",
      "icon": "lock",
      "href": "login?logout=true",
      "permissions": false,
      "onclick": "return confirm('¿Estas seguro de cerrar sesión?')"
    }
  }
}
